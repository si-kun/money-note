generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String @id @default(uuid())
  email    String @unique
  userName String

  subscriptions     Subscription[]
  stocks            Stock[]
  categories        Category[]
  payments          Payment[]
  incomes           Income[]
  shoppingCarts     ShoppingCart[]
  shoppingHistories ShoppingHistory[]
  stockCategories  StockCategory[]
}

// 支払い履歴
model Payment {
  id          String   @id @default(uuid())
  title       String?
  memo        String?
  amount      Int // 支払金額
  paymentDate DateTime @default(now())

  // リレーション
  userId     String
  categoryId String

  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  category        Category         @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  shoppingHistory ShoppingHistory?
}

// 収入履歴
model Income {
  id         String   @id @default(uuid())
  title      String?
  memo       String?
  amount     Int // 収入金額
  incomeDate DateTime @default(now())

  // リレーション
  categoryId String
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}

// サブスクリプション
model Subscription {
  id           String    @id @default(uuid())
  name         String
  startDate    DateTime  @default(now())
  endDate      DateTime?
  monthlyPrice Int
  userId       String
  user         User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// カテゴリー
model Category {
  id   String       @id @default(uuid())
  name String
  type CategoryType

  // リレーション
  userId   String
  payments Payment[]
  incomes  Income[]
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum CategoryType {
  PAYMENT
  INCOME
}

// 在庫管理
model Stock {
  id          String @id @default(uuid())
  name        String
  quantity    Int // 数量
  minQuantity Int? // 最小数量
  unit        String // 单位
  unitPrice   Int? // 値段

  // リレーション
  items ShoppingCartItem[]
  stockCategoryId String?
  stockCategory   StockCategory? @relation(fields: [stockCategoryId], references: [id], onDelete: Cascade)

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model StockCategory {
  id String @id @default(uuid())
  categoryName String

  stocks Stock[]
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 買い物カート(買う前のリスト)
model ShoppingCart {
  id     String             @id @default(uuid())
  name   String             @default("買い物リスト")
  items  ShoppingCartItem[]
  userId String
  user   User               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 買い物履歴(買った後の記録)
model ShoppingHistory {
  id         String             @id @default(uuid())
  name       String?            @default("買い物履歴")
  date       DateTime           @default(now())
  items      ShoppingCartItem[]
  totalPrice Int?
  paymentId  String?            @unique
  payment    Payment?           @relation(fields: [paymentId], references: [id], onDelete: Cascade)
  userId     String
  user       User               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// 商品(カートにも履歴にも使う)
model ShoppingCartItem {
  id        String  @id @default(uuid())
  itemName  String
  quantity  Int
  unit      String
  unitPrice Int?
  checked   Boolean @default(false)
  memo      String?

  // どちらかに属する(両方nullは禁止)
  cartId    String?
  cart      ShoppingCart?    @relation(fields: [cartId], references: [id], onDelete: Cascade)
  historyId String?
  history   ShoppingHistory? @relation(fields: [historyId], references: [id], onDelete: Cascade)

  stockId String?
  stock   Stock?  @relation(fields: [stockId], references: [id], onDelete: Cascade)
}
